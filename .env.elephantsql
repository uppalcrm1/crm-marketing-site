# ElephantSQL Free Database (temporary for testing)
# Sign up at https://www.elephantsql.com/ for a free PostgreSQL database
# Then replace with your ElephantSQL connection URL
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DB_HOST=hostname_from_elephantsql
DB_PORT=5432
DB_NAME=database_name_from_elephantsql
DB_USER=username_from_elephantsql
DB_PASSWORD=password_from_elephantsql

# JWT Secret (change this in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-too

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,*.uppalcrm.com
# Production Environment Variables for UppalCRM Backend
# Copy these values to Render Environment Variables

# Application
NODE_ENV=production
PORT=3000

# Database (use Render PostgreSQL internal URL)
DATABASE_URL=your_render_postgres_internal_url_here

# JWT Configuration (generate strong secrets)
JWT_SECRET=your_strong_jwt_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_strong_refresh_secret_here_min_32_chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration (set to your Render frontend URL)
FRONTEND_URL=https://uppalcrm-frontend.onrender.com
ALLOWED_ORIGINS=https://uppalcrm-frontend.onrender.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12